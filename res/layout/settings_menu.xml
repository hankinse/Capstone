<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:orientation="vertical"
    android:rowCount="8" >

    <Button
        android:id="@+id/update_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="right|top"
        android:layout_row="0"
        android:gravity="top|center_vertical|center_horizontal|center"
        android:text="@string/settingsUpdate" />

    <TextView
        android:id="@+id/audio_settings_text"
        android:layout_width="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|center_vertical"
        android:layout_row="2"
        android:text="@string/audio_setting_text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="26sp" />

    <ToggleButton
        android:id="@+id/toggleButton1"
        android:layout_width="100dp"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_row="2"
        android:checked="true"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/deck_size_text"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="7"
        android:text="@string/deck_size_text"
        android:textSize="26sp" />

    <NumberPicker
        android:id="@+id/deck_size_picker"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal|center_vertical"
        android:layout_row="7" />

</GridLayout>